<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="deltagruppen.circles.PiInfo"
    android:id="@+id/pi_info_layout">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="1200dp"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true"
        android:baselineAligned="false">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="20dp">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:layout_marginRight="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pi_info_title"
                    android:id="@+id/textView5"
                    android:textColor="#000000"
                    android:layout_centerHorizontal="true"
                    android:textSize="30sp"
                    android:layout_marginBottom="10dp" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/pi_info_subtitle"
                    android:id="@+id/textView12"
                    android:layout_below="@+id/textView5"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:gravity="center"
                    android:layout_marginBottom="20dp"
                    android:textSize="20sp" />

                <TableLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="false"
                    android:layout_alignParentLeft="false"
                    android:layout_alignParentStart="false"
                    android:layout_below="@+id/textView12"
                    android:shrinkColumns="1">

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginBottom="10dp">

                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:text="1)"
                            android:id="@+id/textView13"
                            android:layout_gravity="right"
                            android:textSize="18sp"
                            android:textColor="@color/actionbar_background" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/pi_fact_definition"
                            android:id="@+id/textView18"
                            android:paddingLeft="10dp"
                            android:textSize="18sp" />

                    </TableRow>

                    <TableRow
                        android:layout_width="25dp"
                        android:layout_height="fill_parent"
                        android:layout_marginBottom="10dp">

                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:text="2)"
                            android:id="@+id/textView27"
                            android:layout_gravity="right"
                            android:textSize="18sp"
                            android:textColor="@color/actionbar_background" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/pi_fact_approximation"
                            android:id="@+id/textView31"
                            android:paddingLeft="10dp"
                            android:textSize="18sp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="25dp"
                        android:layout_height="fill_parent"
                        android:layout_marginBottom="10dp">

                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:text="3)"
                            android:id="@+id/textView32"
                            android:layout_gravity="right"
                            android:textSize="18sp"
                            android:textColor="@color/actionbar_background" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/pi_fact_pi_day"
                            android:id="@+id/textView34"
                            android:paddingLeft="10dp"
                            android:textSize="18sp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginBottom="10dp" >

                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:text="4)"
                            android:id="@+id/textView35"
                            android:layout_gravity="right"
                            android:textSize="18sp"
                            android:textColor="@color/actionbar_background" />

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/pi_fact_astronomy_part_1"
                                android:id="@+id/textView36"
                                android:paddingLeft="10dp"
                                android:layout_marginBottom="10dp"
                                android:textSize="18sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/pi_fact_astronomy_formula"
                                android:id="@+id/textView38"
                                android:paddingLeft="10dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginBottom="10dp"
                                android:textSize="18sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/pi_fact_astronomy_part_3"
                                android:id="@+id/textView39"
                                android:paddingLeft="10dp"
                                android:textSize="18sp" />
                        </LinearLayout>

                    </TableRow>

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginBottom="10dp" >

                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:text="5)"
                            android:id="@+id/textView40"
                            android:layout_gravity="right"
                            android:textSize="18sp"
                            android:textColor="@color/actionbar_background" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/pi_fact_world_record"
                            android:id="@+id/textView41"
                            android:paddingLeft="10dp"
                            android:textSize="18sp" />
                    </TableRow>

                </TableLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:layout_marginLeft="20dp">

                <TableLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:shrinkColumns="1"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true">

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginBottom="10dp" >

                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:text="6)"
                            android:id="@+id/textView37"
                            android:layout_gravity="right"
                            android:textSize="18sp"
                            android:textColor="@color/actionbar_background" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/pi_fact_eulers_equation"
                            android:id="@+id/textView42"
                            android:paddingLeft="10dp"
                            android:textSize="18sp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="25dp"
                        android:layout_height="fill_parent"
                        android:layout_marginBottom="10dp" >

                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:text="7)"
                            android:id="@+id/textView43"
                            android:layout_gravity="right"
                            android:textSize="18sp"
                            android:textColor="@color/actionbar_background" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/pi_fact_einsteins_birthday"
                            android:id="@+id/textView44"
                            android:paddingLeft="10dp"
                            android:textSize="18sp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="25dp"
                        android:layout_height="fill_parent"
                        android:layout_marginBottom="10dp" >

                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:text="8)"
                            android:id="@+id/textView45"
                            android:layout_gravity="right"
                            android:textSize="18sp"
                            android:textColor="@color/actionbar_background" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/pi_fact_archimedes_approximation"
                            android:id="@+id/textView46"
                            android:paddingLeft="10dp"
                            android:textSize="18sp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginBottom="10dp" >

                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:text="9)"
                            android:id="@+id/textView47"
                            android:layout_gravity="right"
                            android:textSize="18sp"
                            android:textColor="@color/actionbar_background" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/pi_fact_electric_waves"
                            android:id="@+id/textView48"
                            android:paddingLeft="10dp"
                            android:layout_marginBottom="10dp"
                            android:textSize="18sp" />

                    </TableRow>

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginBottom="10dp" >

                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:text="10)"
                            android:id="@+id/textView51"
                            android:layout_gravity="right"
                            android:textSize="18sp"
                            android:textColor="@color/actionbar_background" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/pi_fact_rivers"
                            android:id="@+id/textView52"
                            android:paddingLeft="10dp"
                            android:textSize="18sp" />
                    </TableRow>
                </TableLayout>
            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
