<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content"
    android:layout_height="match_parent" tools:context=".MainActivity"
    android:id="@+id/main_layout"
    android:background="#eceff1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="320dp"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#ff93b6c5"
        android:id="@+id/linearLayout">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="#ffbfd8dc"
            android:weightSum="1">

            <ImageView
                android:layout_width="92dp"
                android:layout_height="104dp"
                android:id="@+id/imageView"
                android:background="@drawable/hand_arrow"
                android:layout_marginStart="18dp"
                android:layout_marginLeft="18dp"
                android:layout_margin="18dp"
                android:layout_marginTop="18dp"
                android:layout_marginRight="36dp"
                android:layout_marginEnd="36dp"
                android:contentDescription="@string/hand_arrow_description" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/head_instructions"
                    android:id="@+id/textView"
                    android:layout_marginTop="18dp"
                    android:textSize="17sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/instruction_part_one"
                    android:id="@+id/textView3"
                    android:layout_marginTop="6dp"
                    android:textSize="13sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/instruction_part_two"
                    android:id="@+id/textView2"
                    android:textSize="13sp"
                    android:layout_weight="0.91" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <deltagruppen.circles.DrawView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#fff"
        android:id="@+id/linearLayout8"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/linearLayout"
        android:layout_toEndOf="@+id/linearLayout" />

    <ImageButton
        android:layout_width="88dp"
        android:layout_height="35dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="10dp"
        android:layout_margin="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:id="@+id/imageButton"
        android:background="@drawable/smc_logo"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:contentDescription="@string/smc_logo_description" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/main_sidebar_attribution"
        android:id="@+id/textView33"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="130dp"
        android:layout_marginStart="117dp"
        android:textColor="#ffffffff"
        android:textSize="12sp"
        android:layout_toStartOf="@+id/linearLayout8"
        android:layout_alignTop="@+id/imageButton"
        android:layout_toLeftOf="@+id/linearLayout8" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Testing button"
        android:id="@+id/the_tester"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:nestedScrollingEnabled="false" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/popUp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/linearLayout"
        android:layout_toEndOf="@+id/linearLayout">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="65dp"
                android:layout_height="39dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/your_pi"
                android:id="@+id/textView29"
                android:layout_column="0"
                android:background="#ffb0bec5"
                android:textColor="#ff263238" />

            <TextView
                android:layout_width="116dp"
                android:layout_height="39dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/userPiString"
                android:layout_column="1"
                android:background="#ffcfd8dc"
                android:textColor="#ff78909c"
                android:layout_marginRight="4dp"
                android:text="updateUserPi" />

            <Button
                android:layout_width="108dp"
                android:layout_height="40dp"
                android:text="@string/calc_pi"
                android:id="@+id/button_calc"
                android:onClick="showCalculatingPiInfoV"
                android:layout_column="2"
                android:background="#ff03a9f4"
                android:textColor="#ffffffff" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="65dp"
                android:layout_height="1dp"
                android:background="#ff90a4ac"/>

            <TextView
                android:layout_width="116dp"
                android:layout_height="1dp"
                android:background="#ff90a4ac"/>

            <TextView
                android:layout_width="108dp"
                android:layout_height="1dp"
                android:background="#ff0288d1"/>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="65dp"
                android:layout_height="39dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/actual_pi"
                android:id="@+id/textView28"
                android:layout_column="0"
                android:background="#ffb0bec5"
                android:textColor="#ff263238" />

            <TextView
                android:layout_width="116dp"
                android:layout_height="39dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/pi"
                android:id="@+id/textView30"
                android:layout_column="1"
                android:background="#ffcfd8dc"
                android:textColor="#ff78909c"
                android:layout_marginRight="4dp" />

            <Button
                android:layout_width="108dp"
                android:layout_height="40dp"
                android:text="@string/teach_me_pi"
                android:id="@+id/button_teach"
                android:onClick="showPiInfoV"
                android:layout_column="2"
                android:background="#ff03a9f4"
                android:textColor="#ffffffff" />
        </TableRow>
    </TableLayout>

</RelativeLayout>
